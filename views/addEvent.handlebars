<div id="home">
    <div class="container">
        <div class="row center">

            <div class="s12">
                <h1>{{msg}}</h1>
                <h2>Create an Event</h2>

            </div>

        </div>


        <div>

        </div>
        <form class="clearfix mb-4" action="POST">
            <div class="form-group">
                <label for="event-name">Name of the event:</label>
                <input type="text" id="event-name" class="form-control" aria-describedby="event-name"
                    placeholder="Name of event">
                <input type="text" id="event-start-time" class="form-control timepicker"
                    aria-describedby="event-start-time" placeholder="Event Start Time">
                <input type="text" id="event-date" class="form-control datepicker" aria-describedby="event-date"
                    placeholder="Event date">
            </div>
            <div class="form-group">
                <label for="event-description">Purpose of event:</label>
                <textarea class="form-control" id="event-description" aria-describedby="event-description"
                    placeholder="event-description"></textarea>
            </div>
            <button id="event-submit" class="btn btn-primary float-right">Submit</button>
        </form>

        <div class="row">
            <h3 class="col s12 center">Upcoming Events:</h3>
        </div>

        <div class="row">

        <ul id="event-list" class="list-group col s6 offset-s3">
            {{#each events}}
            <li data-id="{{this.id}}" class="list-group-item">
                <p class="event-name" id="eventTitle-{{this.id}}">{{this.eventTitle}}</a>
                    <button class="btn right delete"><i class="material-icons">delete</i></button>
                    <button class="btn right invite" value="{{this.id}}">
                        <i class="material-icons">person_add</i></button>
            </li>
            {{/each}}
        </ul>
        </div>
        

    </div>
</div>

<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="js/invite.js"></script>