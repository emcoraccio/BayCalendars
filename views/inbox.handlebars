<div class="container">

  <div>

    {{#each invites}}
    <div class="row">

      <h4 class="col s12">{{this.User.name}} has requested a meetup</h4>
      <p class="col s12">{{this.Event.eventTitle}}</p>
      <p class="col s12">From {{this.startTime}} to {{this.endTime}}</p>
      <p class="col s12">On {{this.date}}</p>
      <p class="col s12">For {{this.Event.description}}</p>

      <button class="{{id}}, accept btn" value={{id}} id={{id}}-accept><i class="material-icons prefix">event_available</i></button>
      <button class="{{id}}, decline btn" value={{id}} id={{id}}-decline><i class="material-icons prefix">event_busy</i></button>
    </div>

    {{/each}}

  </div>

</div>