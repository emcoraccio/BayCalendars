<div id="dncalendar-container" class="container col s12 m10 l8">
    <div id="dncalendar-links" class="dncalendar-links">
        <div id="dncalendar-prev-month" class="dncalendar-prev-month"></div>
        <div id="dncalendar-next-month" class="dncalendar-next-month"></div>
    </div>
</div>

<div class="row">
    <h3 class="col s12 center">Upcoming Events:</h3>
</div>

<div class="row">

    <ul id="event-list" class="list-group col s6 offset-s3">
        {{#each userEvents}}
        <li data-id="{{this.uuid}}" class="list-group-item">
            <p class="event-name" id="eventTitle-{{this.id}}">{{this.eventTitle}}</a>
                <button href="#modal" class="btn right modal-trigger" id="{{this.uuid}}"><i class="material-icons">edit</i></button>
                <button class=" btn right delete"><i class="material-icons">delete</i></button>
                <button class="btn right invite" value="{{this.uuid}}">
                    <i class="material-icons">person_add</i></button>
        </li>
        {{/each}}
    </ul>
</div>

<div id="modal" class="modal modal-fixed-footer">

    <div class="container">
        <br>
        <h1 class= "center">Edit Event</h1>
        <form class="clearfix mb-4" action="POST">
            <div class="form-group">
                <label for="event-name">Name of the event:</label>
                <input type="text" id="eventEditName" class="form-control" aria-describedby="event-name"
                    placeholder="Name of event">
                <input type="text" id="eventEditStartTime" class="form-control timepicker"
                    aria-describedby="event-start-time" placeholder="Event Start Time">
                <input type="text" id="eventEditDate" class="form-control datepicker" aria-describedby="event-date"
                    placeholder="Event date">
            </div>
            <div class="form-group">
                <label for="event-description">Purpose of event:</label>
                <textarea class="form-control" id="eventEditDescription" aria-describedby="event-description"
                    placeholder="event-description"></textarea>
            </div>
            <button id="eventEditSubmit" class="btn btn-primary right">Submit</button>
        </form>
    </div>
</div>